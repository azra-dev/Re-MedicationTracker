<UserControl x:Class="MedicationTracker.Controls.medTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MedicationTracker.Controls"
             mc:Ignorable="d" 
             Height="25" d:DesignWidth="255">
    <Grid>
        <Rectangle Fill="#e5eae9" Height="25" Stroke="#FFABADB3" >
        </Rectangle>
        <TextBlock Name="textPlaceholder" Text="{Binding TextboxPlaceholder}" Foreground="#7898a1" VerticalAlignment="Center"
                   FontFamily="Comfortaa" FontSize="18" Margin="8, 0, 0 ,0"/>
        <TextBox Style="{DynamicResource textboxStyle}" Name="textInput" Background="Transparent" Height="25" FontFamily="Comfortaa" FontSize="18" 
                 Foreground="#7898a1" Margin="8,0,0,0" BorderBrush="Transparent" TextChanged="textInput_TextChanged"
                 Text="{Binding TextInputted, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
        <Button Name="btnClear" Content="x" FontFamily="Comfortaa" HorizontalAlignment="Right" Foreground="#7898a1"
                Width="25" Height="25" Background="Transparent" BorderBrush="Transparent" Click="btnClear_Click"/>
    </Grid>
</UserControl>
